#!/bin/bash

# Verifica si se ejecuta como root
if [[ $EUID -ne 0 ]]; then
  echo "âŒ Este script debe ejecutarse como root"
  exit 1
fi

# Solicita el nombre de usuario
read -p "ğŸ‘¤ Nombre del usuario a configurar OTP: " USUARIO

# Obtiene el home del usuario
USER_HOME=$(eval echo "~$USUARIO")

# Crea el home si no existe
if [ ! -d "$USER_HOME" ]; then
  echo "ğŸ“ El directorio $USER_HOME no existe. CreÃ¡ndolo..."
  mkdir -p "$USER_HOME"
  chown "$USUARIO:$USUARIO" "$USER_HOME"
fi

# Verifica si google-authenticator estÃ¡ instalado
if ! command -v google-authenticator &> /dev/null; then
  echo "âš ï¸ No se encontrÃ³ google-authenticator. Instalando..."
  sudo apt update && sudo apt install -y libpam-google-authenticator
fi

# Ruta del archivo OTP
OTP_FILE="$USER_HOME/.google_authenticator"

# Genera el secreto OTP
echo "ğŸ” Generando clave secreta para $USUARIO..."
yes y | google-authenticator -s "$OTP_FILE" -t -d -f -r 3 -R 30 -W -l "$USUARIO@$(hostname)" > /dev/null

# Establece los permisos correctos
chown "$USUARIO:$USUARIO" "$OTP_FILE"
chmod 400 "$OTP_FILE"

echo "âœ… OTP configurado exitosamente para $USUARIO"
echo "ğŸ“ Agrega la clave manualmente desde el archivo:"
echo "    nano $OTP_FILE"

# Muestra el secreto base32
SECRET=$(head -n 1 "$OTP_FILE")
echo "ğŸ”‘ Clave secreta OTP: $SECRET"
echo "ğŸ“± Puedes agregarla manualmente a tu app de autenticaciÃ³n (como Google Authenticator o Authy)."
