#!/bin/bash

CONFIG_FILE="/etc/v2ray/config.json"
PATH_LIST="/root/path"
INDEX_FILE="/etc/v2ray/path.index"
TEMP_FILE="/tmp/config.json.tmp"
ALIAS_NAME="paths"
ALIAS_COMMAND="sudo bash /root/update_path"

# Detectar archivo de configuraciÃ³n del shell
if [[ "$SHELL" == *zsh ]]; then
    SHELL_RC="$HOME/.zshrc"
else
    SHELL_RC="$HOME/.bashrc"
fi

# Agregar alias si no existe
if ! grep -Fxq "alias $ALIAS_NAME='$ALIAS_COMMAND'" "$SHELL_RC"; then
    echo "âž• Agregando alias '$ALIAS_NAME' a $SHELL_RC"
    echo "alias $ALIAS_NAME='$ALIAS_COMMAND'" >> "$SHELL_RC"

    if [[ $- == *i* ]]; then
        source "$SHELL_RC"
        echo "âœ… Alias '$ALIAS_NAME' activado"
    else
        echo "âš ï¸ EjecutÃ¡ 'source $SHELL_RC' o reiniciÃ¡ la terminal para activar el alias"
    fi
fi

# Verificar si path.dat existe
if [[ ! -f "$PATH_LIST" ]]; then
    echo "ðŸš« El archivo path no existe"
    exit 1
fi

# Crear INDEX_FILE si no existe
if [[ ! -f "$INDEX_FILE" ]]; then
    echo 0 > "$INDEX_FILE"
fi

# Leer paths en array
mapfile -t PATHS < "$PATH_LIST"
TOTAL_PATHS=${#PATHS[@]}

if (( TOTAL_PATHS == 0 )); then
    echo "âŒ El archivo path estÃ¡ vacÃ­o"
    exit 1
fi

# Leer y validar Ã­ndice actual
INDEX=$(cat "$INDEX_FILE")
if ! [[ "$INDEX" =~ ^[0-9]+$ ]] || (( INDEX >= TOTAL_PATHS )); then
    INDEX=0
fi

NEW_PATH="${PATHS[$INDEX]}"
echo "ðŸ” Aplicando path $((INDEX + 1)) de $TOTAL_PATHS: $NEW_PATH"

# Actualizar config.json
jq --arg newPath "$NEW_PATH" '
(.inbounds[]?.streamSettings?.wsSettings?.path) |= $newPath
' "$CONFIG_FILE" > "$TEMP_FILE" && mv "$TEMP_FILE" "$CONFIG_FILE"

# Guardar nuevo Ã­ndice (siguiente path)
NEXT_INDEX=$(( (INDEX + 1) % TOTAL_PATHS ))
echo "$NEXT_INDEX" > "$INDEX_FILE"

# Reiniciar V2Ray
systemctl restart v2ray

echo "âœ… Nuevo path aplicado: $NEW_PATH"
